<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >
<suite name="MainTest" parallel="tests" thread-count="2">

    <test name="Registration">
        <parameter name="startType" value="selenoid"/>
        <parameter name="browser" value="chrome"/>
        <parameter name="version" value="latest"/>
        <classes>
            <class name="RegistrationTest">
                <methods>
                    <include name="checkTempoPizzaRegistration"/>
                    <include name="checkUserRegistered"/>
                </methods>
            </class>
        </classes>
    </test>

    <test name="PizzaShopping">
        <parameter name="startType" value="selenoid"/>
        <parameter name="browser" value="chrome"/>
        <parameter name="version" value="latest"/>
        <classes>
            <class name="PizzaShoppingTest">
                <methods>
                    <include name="checkPizzaShoppingTest1"/>
                    <include name="checkPizzaShoppingTest2"/>
                    <include name="checkPizzaShoppingTest3"/>
                    <include name="checkPizzaShoppingTest4"/>
                    <include name="checkPizzaShoppingTest5"/>
                </methods>
            </class>
        </classes>
    </test>

</suite>
